{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "esm",
    "module": "es6",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "esm"
  },
  "exclude": [
    "node_modules",
    "dist",
    "esm",
    "lib",
    "scripts",
    "webpack.config.js",
    "./src/**/*.test.tsx",
    "./src/**/*.test.ts"
  ]
}
